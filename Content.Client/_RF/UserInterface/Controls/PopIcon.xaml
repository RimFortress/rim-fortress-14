<Control
    xmlns="https://spacestation14.io"
    xmlns:rf="clr-namespace:Content.Client._RF.UserInterface.Controls"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    SetSize="120 120"
    Margin="0 0 0 15">
    <controls:Placeholder Name="Border"/>
    <PanelContainer Name="Background" Margin="14 14 11 11"
                    HorizontalExpand="True" VerticalExpand="True">
        <PanelContainer.PanelOverride>
            <graphics:StyleBoxFlat BackgroundColor="#1E1E22AA" />
        </PanelContainer.PanelOverride>
    </PanelContainer>
    <TextureButton Name="Button" Access="Protected"
                   MouseFilter="Pass" ToggleMode="True"
                   HorizontalExpand="True" VerticalExpand="True">
        <SpriteView Name="Icon" Access="Public"
                    SetSize="80 80" Stretch="Fill" Margin="0 10 0 0"
                    VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Label Name="Name" Access="Protected" SetWidth="80"
               HorizontalExpand="True" VerticalAlignment="Bottom"
               Align="Center" VAlign="Bottom" ClipText="True"/>
    </TextureButton>
    <rf:VLine Name="Marker" Access="Protected" Thickness="5" Margin="0 25 5 25"
              HorizontalAlignment="Right" VerticalExpand="True"/>
</Control>
