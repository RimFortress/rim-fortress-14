<controls:PassiveTasksMenu
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RF.UserInterface.Controls"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:xNamespace="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:style="clr-namespace:Content.Client.Stylesheets"
    HorizontalExpand="True">
    <PanelContainer>
        <PanelContainer.PanelOverride>
            <graphics:StyleBoxFlat BackgroundColor="{xNamespace:Static style:StyleNano.PanelDark}"/>
        </PanelContainer.PanelOverride>
    </PanelContainer>
    <ScrollContainer MinWidth="90" HScrollEnabled="False" HorizontalExpand="True" VerticalExpand="True">
        <BoxContainer Name="Container" Margin="5" Orientation="Vertical" VerticalExpand="True"/>
    </ScrollContainer>
</controls:PassiveTasksMenu>
