<controls:RfConstructionMenu
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RF.UserInterface.Controls">
    <BoxContainer Orientation="Vertical" VerticalExpand="True">
        <BoxContainer Name="SearchBar" Orientation="Horizontal" Visible="False">

        </BoxContainer>
        <BoxContainer Name="CategoriesBox" Orientation="Vertical"/>
        <BoxContainer Name="ItemsBox" Orientation="Vertical" Visible="False"/>
        <BoxContainer Name="MetadataBox" Orientation="Vertical" Visible="False">
            <ScrollContainer>
                <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                    <BoxContainer Orientation="Horizontal">
                        <TextureRect Name="MetaTexture" Access="Public"
                                     SetSize="48 48" Stretch="KeepAspectCentered"/>
                        <Label Name="MetaName" Access="Public" Margin="10 0 0 0"
                               Align="Left" StyleClasses=""/>
                    </BoxContainer>
                </BoxContainer>
            </ScrollContainer>
        </BoxContainer>
    </BoxContainer>
</controls:RfConstructionMenu>
